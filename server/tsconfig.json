{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",                // ← CHANGE THIS
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",       // ← ADD THIS
    "resolveJsonModule": true,        // optional
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],          // ← More specific
  "exclude": ["node_modules", "dist"]
}